    <div class="moments"> 
{% for stadium in stadiums %}
  
<div class="card" style="width: 18rem; border:#333 solid 3px; border-radius: 10px;">
  <img src="{{ stadium.photo }}" class="card-img-top" alt="...">
  <div class="card-body">
    <h5 class="card-title">{{ stadium.name }}</h5>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">Ville : {{ stadium.city }}</li>
    <li class="list-group-item">Pays : {{ stadium.country }}</li>
    <li class="list-group-item">Capacit√© : {{ stadium.capacity }}</li>
  </ul>
  <div class="card-body">
    <a href="{{ path('app_stadium_show', {'id': stadium.id}) }}" class="card-link">Voir</a>
    <a href="{{ path('app_stadium_edit', {'id': stadium.id}) }}" class="card-link">Modifier</a>
  </div>
</div>

{% endfor %}
</div>
