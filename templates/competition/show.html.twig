{% extends 'base.html.twig' %}

{% block title %}Compétition{% endblock %}

{% block body %}
    <h1>{{competition.name}}</h1>

    <div class="card" style="width: 18rem; border:#333 solid 3px; border-radius: 10px;">
  <div class="card-body">
    <h5 class="card-title">{{ competition.name }}</h5>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">Type : {{competition.type }}</li>
  </ul>
  <div class="card-body">
    <a href="{{ path('app_competition_index') }}">Retour aux compétitions</a>
    <a href="{{ path('app_competition_edit', {'id': competition.id}) }}" class="card-link">Modifier</a>
  </div>
</div>

    {{ include('competition/_delete_form.html.twig') }}

{% endblock %}
