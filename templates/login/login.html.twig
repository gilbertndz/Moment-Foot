{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
{% block stylesheets %}
			{{ encore_entry_link_tags('login') }}
{% endblock %}
{% block javascripts %}
			{{ encore_entry_script_tags('login') }}
{% endblock %}
	
	{% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
	
	<div class="section">
		<div class="container">
			<div class="row full-height justify-content-center">
				<div class="col-12 text-center align-self-center py-5">
					<div class="section pb-5 pt-5 pt-sm-2 text-center">
						<h6 class="mb-0 pb-3"><span>Connexion </span><span>Inscription</span></h6>
			          	<input class="checkbox" type="checkbox" id="reg-log" name="reg-log"/>
			          	<label for="reg-log"></label>
						<div class="card-3d-wrap mx-auto">
							<div class="card-3d-wrapper">
								<div class="card-front">
								<form action="{{ path('app_login') }}" method="post">
									<div class="center-wrap">
										<div class="section text-center">
											<h4 class="mb-4 pb-3">Se Connecter</h4>
											<div class="form-group">
												<label for="username" placeholder="Email"></label>
												<input type="text" id="username" name="_username" value="{{ last_username }}"/>
												<i class="input-icon uil uil-at"></i>
											</div>	
											<div class="form-group mt-2">
												<label for="password" placeholder="Mot de passe"></label>
												<input type="password" id="password" name="_password"/>
												<i class="input-icon uil uil-lock-alt"></i>
											</div>
											<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
											<input type="hidden" name="{{ path('app_home') }}" value="/"/>
											<button type="submit">Connexion</button><br>
                            				<p class="mb-0 mt-4 text-center"><a href="#0" class="link">Mot de passe oubli√© ?</a></p>
				      					</div>
			      					</div>
									</form>
			      				</div>
								<div class="card-back">
									<div class="center-wrap">
										<div class="section text-center">
											<h4 class="mb-4 pb-3">Sign Up</h4>
											<div class="form-group">
												<input type="text" name="logname" class="form-style" placeholder="Your Full Name" id="logname" autocomplete="off">
												<i class="input-icon uil uil-user"></i>
											</div>	
											<div class="form-group mt-2">
												<input type="email" name="logemail" class="form-style" placeholder="Your Email" id="logemail" autocomplete="off">
												<i class="input-icon uil uil-at"></i>
											</div>	
											<div class="form-group mt-2">
												<input type="password" name="logpass" class="form-style" placeholder="Your Password" id="logpass" autocomplete="off">
												<i class="input-icon uil uil-lock-alt"></i>
											</div>
											<a href="#" class="btn mt-4">submit</a>
				      					</div>
			      					</div>
			      				</div>
			      			</div>
			      		</div>
			      	</div>
		      	</div>
	      	</div>
	    </div>
	</div>

{% endblock %}
